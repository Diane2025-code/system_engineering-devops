#!/usr/bin/env bash
# This script displays the content of the current directory in a list format, showing only the part after the first dash

for file in *; do
    # Skip if no files match the pattern (when * doesn't expand)
    if [[ ! -e "$file" ]]; then
        continue
    fi
    # Skip hidden files (files starting with .)
    if [[ "$file" != .* ]]; then
        # Check if the file contains a dash
        if [[ "$file" == *-* ]]; then
            # Extract everything after the first dash
            echo "${file#*-}"
        else
            # If no dash, display the full filename
            echo "$file"
        fi
    fi
